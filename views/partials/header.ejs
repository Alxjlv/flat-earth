<!-- views/partials/header.ejs -->
<div class="content">
    <div class="container-fluid, logo-home">
        <a href="/"><img src="/images/flatter-logo.png" class="img-fluid" alt="Responsive image"></a>
    </div>

<div class="subhead">
    <p>Find your perfect flat based on where you want to go!</p>
</div>
    <form method="POST" class="center" action="search">
        <div class="form-row justify-content-center">
            <div class="form-group col-md-3 search-text-col">
                <label>Where do you want to commute?</label>
                <input type="text" class="form-control" name="inputCommuteLocation" placeholder="e.g. University of Auckland">
            </div>
            <div class="form-group col-md-3, search-slider-col">
                <label>Preferred Commute Time</label>
                <div class="slidecontainer">
                    <div class="form-row">
                        <p>5min</p>
                        <input type="range" min="5" max="120" value="50" class="slider mt-2" name="inputCommuteTime">
                        <p>2hr+</p>
                    </div>
                </div>
            </div>
            <div class="form-group col-md-3, search-submit-col">
                <button type="submit" id="search-button" class="btn btn-primary findflat">Find Flats</button>
            </div>
        </div>
    </form>
</div>
