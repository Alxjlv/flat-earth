<!doctype html>
<html lang="en">

<head>
    <!-- Required meta tags -->
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">

    <!-- Bootstrap CSS -->
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.3.1/css/bootstrap.min.css"
        integrity="sha384-ggOyR0iXCbMQv3Xipma34MD+dH/1fQ784/j6cY/iJTQUOhcWr7x9JvoRxT2MZw1T" crossorigin="anonymous">
    <!-- Custom CSS -->
    <link rel="stylesheet" type="text/css" href="/css/style-header.css" />
    <link rel="stylesheet" type="text/css" href="/css/style-search.css" />

    <title>Search Flatter</title>
</head>
<header>
    <!-- HTML code for logo and input form -->
    <%- include('partials/header') %>
</header>

<body>
    <!-- <p><%= inputCommuteLocation %> <%= inputCommuteTime %></p> -->
    <div class="container">
        <div class="row">
            <% var i = 0; flats.forEach(function(flat) { i++ %>
            <div class="col-sm-<%= i > 2 ? 4 : 6 %> mb-4">
                <div class="card" style="border:none">
                    <a href="https://trademe.co.nz/<%= flat.flatID %>">
                        <img class="card-img-top" src="<%= flat.picture %>" alt="<%= flat.title %>">
                    </a>
                    <div class="card-body px-0 pt-2 d-flex flex-wrap justify-content-between">
                        <p class="card-text mb-2"><%= flat.title %><br>Price: $<%= flat.price %> per week<br>Travel time: approx. <%= flat.duration %> minutes</p>
                        <div>
                            <a href="https://trademe.co.nz/<%= flat.flatID %>"
                                class="btn btn-sm btn-outline-secondary btn-block">View</a>
                        </div>
                    </div>
                </div>
            </div>
            <% }); %>
        </div>
    </div>



    <!-- Optional JavaScript -->
    <!-- jQuery first, then Popper.js, then Bootstrap JS -->
    <script src="https://code.jquery.com/jquery-3.3.1.slim.min.js"
        integrity="sha384-q8i/X+965DzO0rT7abK41JStQIAqVgRVzpbzo5smXKp4YfRvH+8abtTE1Pi6jizo"
        crossorigin="anonymous"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.14.7/umd/popper.min.js"
        integrity="sha384-UO2eT0CpHqdSJQ6hJty5KVphtPhzWj9WO1clHTMGa3JDZwrnQq4sF86dIHNDz0W1"
        crossorigin="anonymous"></script>
    <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.3.1/js/bootstrap.min.js"
        integrity="sha384-JjSmVgyd0p3pXB1rRibZUAYoIIy6OrQ6VrjIEaFf/nJGzIxFDsf4x0xIM+B07jRM"
        crossorigin="anonymous"></script>

    <!-- Custom JS -->
    <script type="text/javascript" src="/javascript/javascript.js"></script>
</body>

</html>